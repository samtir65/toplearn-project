@page "{id}"
@model toplearn.web.Pages.Admin.Roles.EditRolesModel
@{
    ViewData["Title"] = "ویرایش نقش";
}

<form method="post" enctype="multipart/form-data">
    

    <div class="row">

        <div class="col-lg-12">
            <h2 class="page-header">ویرایش نقش</h2>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="col-md-8">
        <div class="panel panel-primary">
            <div class="panel-heading">
                نقشها
            </div>
            <div class="panel-body">
                <input type="hidden" asp-for="Editrole.RolID" />
                <input type="hidden" asp-for="Editrole.IsDelete"/>
                <div class="form-group">
                    <label>عنوان نقش</label>
                    <input type="text" class="form-control" asp-for="Editrole.RolTitle">
                </div>
                <div class="row" style="margin:10px 2px">
                    <button class="btn-sm btn-success">ویرایش</button>
                </div>
            </div>
        </div>
    </div>


</form>
