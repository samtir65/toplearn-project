@model toplearn.Core.DTOs.resetpasswordviewmodel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">بازیابی رمز عبور</li>
    </ul>
</nav>
<main class="client-page">
    <div class="container-content">

        <header><h2> بازیابی رمز عبور </h2></header>

        <div class="form-layer">

            <form asp-action="ResetPassword">
                <input type="hidden" asp-for="ActiveCode" />

                <div class="input-group">
                    <span class="input-group-addon" id="username"><i class="zmdi zmdi-account"></i></span>
                    <input asp-for="PassWord" type="password" class="form-control" placeholder="رمز عبور" aria-describedby="username">
                </div>

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="RePassWord" type="password" class="form-control" placeholder="تکرار رمز عبور" aria-describedby="email-address">
                </div>

                
                <div asp-validation-summary="All" class="text-danger">

                </div>
               


                <button class="btn btn-success"> ثبت تغییرات</button>

            </form>
        </div>

    </div>
</main>